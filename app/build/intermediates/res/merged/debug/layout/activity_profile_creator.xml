<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_profile.ProfileCreatorActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coordinatorview_profile_creator">

        <!--TextView for Profile Header-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_profile_header"
            android:text="@string/textview_profile_header"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />

        <!--Placeholder for ListView Items of Profiles-->
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview_profile_creator"
            android:layout_marginTop="32dp"/>

        <!--Floating Action Button to create profile-->
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab_profile_creator"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_gravity="end|bottom"
            android:src="@mipmap/ic_room_service_white_48dp"/>

    </android.support.design.widget.CoordinatorLayout>


</RelativeLayout>
